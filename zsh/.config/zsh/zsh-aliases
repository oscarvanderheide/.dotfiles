# Always ask for confirmation before overwriting things
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'

# Replace cd with z
alias cd='z'

# Replace nvim and vim with uv run nvim
alias nvim='uv run nvim'
alias vim='uv run nvim'
alias v='uv run nvim'

# Quickly open nvim and zsh config files in nvim
alias zz='nvim ~/.zshrc; exec zsh'

# Replace ls with eza
alias ls='eza --group-directories-first --icons -l --color=always --no-user --no-permissions --time=modified --time-style=relative --tree --level=1'
alias la='eza -a --group-directories-first --icons -l --color=always --no-user --no-permissions --time=modified --time-style=relative --tree --level=1'
alias lt='ls --tree --level=2'
alias lt2='ls --tree --level=2'
alias lt3='ls --tree --level=3'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Replace cat with bat (disable automatic use of less with bat)
alias cat='bat  --pager=never'

# Replace grep with rg 
alias grep='rg'
alias rg='rg --hidden --smart-case'

# Easy access to latest version of ArrayView
alias av='uvx --from git+https://github.com/oscarvanderheide/arrayview arrayview'

# Easy access to iCloud Drive on macOS
alias icloud='cd "$HOME/Library/Mobile Documents/com~apple~CloudDocs"'
