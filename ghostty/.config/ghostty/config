window-padding-color = extend
background-opacity = 0.9
background-blur-radius = 0
adjust-underline-position = 8
adjust-underline-thickness = 2
auto-update-channel = tip
font-size = 14
macos-icon = "custom-style"
macos-icon-frame = "aluminum"
macos-icon-ghost-color = "86e1fc"
macos-icon-screen-color = "222436"
macos-option-as-alt = true
mouse-hide-while-typing = true
cursor-style = "bar"
cursor-style-blink = false
window-decoration = false
window-padding-balance = false
macos-titlebar-style=transparent
window-save-state = always
macos-window-shadow = false
macos-titlebar-style = tabs
confirm-close-surface = false
# keybind = super+a=text:\x1b[97;9u

# Allow CMD + {a,p,f,s} in tmux/nvim
keybind = cmd+a=text:\x1ba
keybind = cmd+p=text:\x1bp
keybind = cmd+f=text:\x1bf
keybind = cmd+s=text:\x1bs


# Allow CMD + J to start tmux-sessionizer
keybind = cmd+shift+j=text:\x1bJ

# Open new tmux tabs with CMD + t
keybind = cmd+t=text:\x1bt

# Close tmux tabs with CMD + w
keybind = cmd+w=text:\x1bw

# Previous/next tmux window
keybind = cmd+shift+[=text:\x1b<
keybind = cmd+shift+]=text:\x1b>

# Next tmux session
keybind = cmd+shift+n=text:\x1bN

# --- Splits ---
# Map Cmd+\ to Alt+\ (Escape + \)
# keybind = cmd+\=text:\x1b\\
keybind = cmd+\=text:\x1b\|

# Map Cmd+- to Alt+- (Escape + -)
keybind = cmd+-=text:\x1b_

# --- Navigation ---
# Map Cmd+[ to Alt+Shift+H (Arbitrary safe signal for "Previous")
keybind = cmd+[=text:\x1bH

# Map Cmd+] to Alt+Shift+L (Arbitrary safe signal for "Next")
keybind = cmd+]=text:\x1bL
